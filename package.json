{
  "name": "SampleNodeApp",
  "version": "1.0.0",
  "description": "A simple node server application",
  "main": "index.js",
  "scripts": {
    "test": "jest .",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'tests/**/*.test.ts' --exec 'ts-node' src/app.ts",
    "build": "tsc -p .",
    "start": "yarn build && node ./dist/app",
    "lint": "tslint 'src/**/*.ts'",
    "lint-fix": "tslint 'src/**/*.ts' --fix"
  },
  "author": "Tina Thomas",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^16.11.4",
    "express": "4.17.1",
    "ts-node": "10.4.0",
    "tslint": "^5.10.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/express": "4.17.1",
    "@types/jest": "^22.2.3",
    "jest": "27.3.1",
    "nodemon": "2.0.14",
    "ts-jest": "^22.4.4"
  }
}
